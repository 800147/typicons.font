!!! 5
html
  head
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')

    meta(charset='UTF-8')

    :stylus
      body {
        margin: 0;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 13px;
        line-height: 18px;
        color: #333333;
        background-color: #ffffff;
      }

      .page-header
        width 100%
        position fixed
        background white
        z-index 10
        top 0

        small
          font-size 0.6em
          color #666
          font-weight normal

        .container
          border-bottom 1px solid #ddd
          padding 12px 0

      .container,
      #preview
        width 940px
        margin auto
        position relative

      #icons 
        margin-top 112px

      .switch
        position absolute
        right 0
        bottom 24px
        color #888

        input
          margin-right .3em

      .icon
        padding 12px
        float left

      .codesOn
        .i-name
          display none
        .i-code
          display block

      .i-name
      .i-code
        color #666
        font-size 11px
        display block
        line-height 1.2em

      .i-code
        display none

    include demo.codes.jade

    script
      function toggleCodes(on) {
        var obj = document.getElementById('icons');

        if (on) {
          obj.className += ' ' + 'codesOn';
        } else {
          obj.className = obj.className.replace(' codesOn', '');
        }
      }

  body
    .page-header
      .container
        h1 #{font.fullname}
          |  
          small font demo
        label.switch
          input(type='checkbox', onclick='toggleCodes(this.checked)')
          | show codes

    #icons
      #preview.clearfix
        - var col_class = "span" + Math.ceil(12 / meta.columns)
        - var chunk_size = Math.ceil(glyphs.length / meta.columns)
        - for (var i = 0; i < meta.columns; i++)

          - var offset = i * chunk_size
          - for (var c = 0; c < chunk_size && glyphs[offset + c]; c++)
            - var g = glyphs[offset + c]
            - var css_class = meta.css_prefix + '-' + (g.css || g.file)
            - var code = g.code.toString(16)
            - var match = g.search + ' ' + g.css.split('-').join(' ')
              .icon(data-name='#{g.css}', data-code='#{code}', data-match='#{match} ')
                span(class=meta.css_prefix + ' ' + css_class)